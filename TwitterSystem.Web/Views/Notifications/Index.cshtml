@model TwitterSystem.Web.ViewModels.Notifications.NotificationsHomeViewModel
@{
    ViewBag.Title = "Notifications";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        @if (Model.Notifications.Any())
        {
            @Html.DisplayFor(m => m.Notifications)
            <ul class="pager">
                <li class="next">
                    @Html.ActionLink("Next →", "Index")
                </li>
            </ul>
        }
        else
        {
            <p class="text-center">You don't have unread notifications.</p>
        }
    </div>
</div>
